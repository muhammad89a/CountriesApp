<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/flagImgCountryItemList"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        tools:src="@tools:sample/avatars"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/nativeNameCountryItemList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/text_color_body"
        app:layout_constraintBottom_toTopOf="@+id/enNameCountryItemList"
        app:layout_constraintEnd_toStartOf="@id/areaCountryItemList"
        app:layout_constraintStart_toEndOf="@+id/flagImgCountryItemList"
        app:layout_constraintTop_toTopOf="@+id/flagImgCountryItemList"
        tools:text="@tools:sample/first_names" />


    <TextView
        android:id="@+id/enNameCountryItemList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/text_color_body"
        app:layout_constraintBottom_toBottomOf="@+id/flagImgCountryItemList"
        app:layout_constraintEnd_toStartOf="@id/areaCountryItemList"
        app:layout_constraintStart_toEndOf="@+id/flagImgCountryItemList"
        app:layout_constraintTop_toBottomOf="@+id/nativeNameCountryItemList"
        tools:text="@tools:sample/last_names" />

    <TextView
        android:id="@+id/areaCountryItemList"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/text_color_body"
        tools:text="@tools:sample/date/hhmm"
        app:layout_constraintBottom_toBottomOf="@+id/flagImgCountryItemList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/flagImgCountryItemList" />

</androidx.constraintlayout.widget.ConstraintLayout>